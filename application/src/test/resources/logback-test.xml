<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set logging level for our test classes -->
    <logger name="me.riddle.fintech.application.service.dto" level="INFO"/>

    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>